<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/headline_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        tools:ignore="MissingPrefix">

        <ImageView
            android:id="@+id/iv_news"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="center" />

        <TextView
            android:id="@+id/tv_headline_title"
            android:layout_marginTop="4dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            fontPath="fonts/Roboto-Black.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_news"
            android:layout_gravity="top"
            android:maxLines="3"
            android:textSize="16sp"
            tools:text="Electronic Entertainment: Which Types of Entertainment Platforms Rock Today" />

        <TextView
            android:id="@+id/tv_headline_desc"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_headline_title"
            android:layout_marginTop="8dp"
            android:maxLines="6"
            android:textSize="16sp"
            tools:text="Facebook has had some bumpy years. Critics, especially Rupert Murdoch and his News Corp CEO Robert Thomson, have no intention of letting the crisis go to waste." />

        <RelativeLayout
            android:id="@+id/rl_source_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_headline_desc"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_headline_source"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:padding="4.5dp"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="10sp"
                tools:text="Wired" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>